@using Web.Models.BO
@model Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Livre</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Owner
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
    </dl>
</div>
<form asp-action="ApproveOrReject" style="display:inline;" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="status" value="@BookStatus.Available" />
    <button type="submit" class="btn btn-xs btn-success">Available</button>
</form>
<form asp-action="ApproveOrReject" style="display:inline;" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="status" value="@BookStatus.Borrowed" />
    <button type="submit" class="btn btn-xs btn-danger">Borrowed</button>
</form>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
